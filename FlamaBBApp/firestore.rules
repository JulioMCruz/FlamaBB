rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT: Open rules for wallet-based authentication testing
    // Firebase Auth disabled, using wallet signatures for authentication
    
    // Allow all operations for development and wallet-based auth
    match /{document=**} {
      allow read, write, create, update, delete: if true;
    }
  }
}