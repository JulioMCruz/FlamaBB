{
  "name": "flamabb-contracts",
  "version": "1.0.0",
  "description": "Smart contracts for FlamaBB social experiences platform",
  "main": "index.js",
  "scripts": {
    "build": "hardhat compile",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write 'contracts/**/*.sol' 'test/**/*.ts' 'scripts/**/*.ts'",
    "clean": "hardhat clean",
    "typechain": "hardhat typechain",
    "deploy:base-sepolia": "hardhat run scripts/deploy.ts --network base-sepolia",
    "deploy:base": "hardhat run scripts/deploy.ts --network base",
    "verify:base-sepolia": "hardhat run scripts/verify.ts --network base-sepolia",
    "verify:base": "hardhat run scripts/verify.ts --network base",
    "node": "hardhat node",
    "console": "hardhat console",
    "flatten": "hardhat flatten"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.6",
    "@nomicfoundation/hardhat-ignition": "^0.15.5",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.16",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.10",
    "chai": "^4.4.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.1",
    "hardhat": "^2.22.6",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.3.2",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^5.0.1",
    "solidity-coverage": "^0.8.12",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "smart-contracts",
    "hardhat",
    "base",
    "web3",
    "experiences",
    "social"
  ],
  "author": "FlamaBB Team",
  "license": "MIT"
}