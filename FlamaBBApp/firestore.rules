rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // TEMPORARY: Very permissive rules for CDP wallet testing
    // Users can read and write their own user documents + temp users
    match /users/{userId} {
      // Allow authenticated users to access their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // TEMP: Allow creation and access for temporary test users (userId starts with 'temp_')
      allow read, write, create: if userId.matches('temp_.*');
      // TEMP: Allow all operations for testing purposes
      allow read, write, create: if true;
    }
    
    // Cities collection - allow read access to all authenticated users
    match /cities/{cityId} {
      allow read: if request.auth != null;
    }
    
    // City preferences - users can read/write their own preferences by wallet address
    match /cityPreferences/{walletAddress} {
      allow read, write: if request.auth != null;
    }
    
    // Interests collection - allow read access to all authenticated users
    match /interests/{interestId} {
      allow read: if request.auth != null;
    }
    
    // Interest preferences - users can read/write their own preferences by wallet address
    match /interestPreferences/{walletAddress} {
      allow read, write: if request.auth != null;
    }
    
    // Experiences - allow read to authenticated users, write to creators
    match /experiences/{experienceId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null;
      allow delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
      // TEMP: Allow all operations for CDP wallet testing
      allow read, write, create, update, delete: if true;
    }
  }
}